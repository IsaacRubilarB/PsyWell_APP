<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1a3b5d"
    android:padding="16dp">

    <!-- Logo -->
    <ImageView
        android:id="@+id/logo_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/app_name"
        android:layout_marginBottom="20dp" />

    <!-- Sección de Sonidos Relajantes -->
    <TextView
        android:id="@+id/sound_section_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sonidos_reajantes"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_below="@id/logo_image"
        android:layout_marginTop="20dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_sounds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sound_section_title"
        android:layout_marginBottom="20dp" />

    <!-- Sección de Videos de Ayuda -->
    <TextView
        android:id="@+id/video_section_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/videos_ayuda"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_below="@id/recycler_sounds"
        android:layout_marginTop="20dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_videos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/video_section_title"
        android:layout_marginBottom="20dp" />

    <!-- Sección de Libros Recomendados -->
    <TextView
        android:id="@+id/book_section_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/libros_recomendados"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_below="@id/recycler_videos"
        android:layout_marginTop="20dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_books"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/book_section_title" />
</RelativeLayout>
